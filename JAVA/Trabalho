        Usuario usuario = new Usuario("@Joao", "João V.", "18", "Sou um desenvolvedor","Bem vindo ao meu perfil",1550,"Boné","Link");
        Postagem postagem = new Postagem("Bem vindos ao meu perfil","Boas vindas","02/05/2024",100);
